
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Routes over shows
GET     /shows                      controllers.ShowsController.shows
GET     /shows/new                  controllers.ShowsController.create
GET     /shows/:id                  controllers.ShowsController.show(id: Integer)

# Routes over episodes
GET     /shows/:sid/episodes/new    controllers.EpisodesController.create(sid: Int)
GET     /shows/:sid/episodes/:eid   controllers.EpisodesController.episode(sid: Int, eid: Int)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
